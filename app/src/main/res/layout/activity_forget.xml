<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="#FFF3F3F3">

    <RelativeLayout
        android:id="@+id/forget_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_14"
        >
        <TextView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_12"/>
        <TextView
            android:id="@+id/my_register_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:text="忘记密码"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/forget_tou"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/register_RelativeLayout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginRight="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_70"
            android:orientation="horizontal"
            android:background="@drawable/shape_register_edittext"
            android:paddingBottom="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86 "
                android:textSize="@dimen/dp_16"
                />
            <EditText
                android:id="@+id/forget_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="@dimen/dp_75"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="请输入手机号"
                android:textColor="#FFCCCCCC"
                android:background="@null"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/register_RelativeLayout_one"
            android:id="@+id/register_RelativeLayout_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginRight="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_35"
            android:orientation="horizontal"
            android:background="@drawable/shape_register_edittext"
            android:paddingBottom="@dimen/dp_10">
            <EditText
                android:id="@+id/forget_Yzm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toLeftOf="@+id/forget_GetYzm"
                android:hint="请输入验证码"
                android:textColor="#FFCCCCCC"
                android:background="@null"/>
            <TextView
                android:id="@+id/forget_GetYzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="#FF333333"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/register_RelativeLayout_four"
            android:id="@+id/register_RelativeLayout_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginRight="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_35"
            android:orientation="horizontal"
            android:background="@drawable/shape_register_edittext"
            android:paddingBottom="@dimen/dp_10">
            <EditText
                android:id="@+id/forget_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="请输入新密码"
                android:textColor="#FFCCCCCC"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:background="@null"/>
        </RelativeLayout>



        <Button
            android:id="@+id/forget_ok"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/register_RelativeLayout_six"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@drawable/shape_mainactivity_button"
            android:text="确认"
            android:textColor="#fff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20">

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>