<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="#FFF3F3F3">

    <RelativeLayout
        android:id="@+id/register_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_14"
        >
        <TextView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_12"/>
        <TextView
            android:id="@+id/my_register_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:text="申请入住"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_RelativeLayout_tou"
        android:layout_below="@id/register_tou"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_register_all_back"
        android:layout_marginBottom="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:orientation="horizontal"
            android:background="@drawable/shape_register_edittext"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择城市"
                android:textSize="@dimen/dp_16"
                />
            <EditText
                android:id="@+id/register_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="@dimen/dp_75"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="选择城市"
                android:textColor="#FFCCCCCC"
                android:background="@null"/>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/register_RelativeLayout_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_RelativeLayout_tou"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:background="@drawable/shape_register_all_back">
        <RelativeLayout
            android:layout_below="@+id/register_RelativeLayout_one"
            android:id="@+id/register_RelativeLayout_theer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_18"
            android:orientation="horizontal"
            android:background="@drawable/shape_register_edittext"
            android:paddingBottom="@dimen/dp_18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textSize="@dimen/dp_16" />
            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="@dimen/dp_75"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:inputType="phone"
                android:textColor="#FFCCCCCC"
                android:background="@null"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/register_RelativeLayout_theer"
            android:id="@+id/register_RelativeLayout_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_18"
            android:orientation="horizontal"
            android:background="@drawable/shape_register_edittext"
            android:paddingBottom="@dimen/dp_18">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textSize="@dimen/dp_16"/>
            <EditText
                android:id="@+id/register_Yzm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_75"
                android:layout_toLeftOf="@+id/register_GetYzm"
                android:hint="请输入验证码"
                android:maxLength="9"
                android:textColor="#FFCCCCCC"
                android:background="@null"/>
            <TextView
                android:id="@+id/register_GetYzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="#FF333333"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/register_RelativeLayout_four"
            android:id="@+id/register_RelativeLayout_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_18"
            android:orientation="horizontal"
            android:background="@drawable/shape_register_edittext"
            android:paddingBottom="@dimen/dp_18">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="@dimen/dp_16"/>
            <EditText
                android:id="@+id/register_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="@dimen/dp_75"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="请输入密码"
                android:textColor="#FFCCCCCC"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLength="16"
                android:background="@null"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/register_RelativeLayout_five"
            android:id="@+id/register_RelativeLayout_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_18"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_18">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="再次输入"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLength="16"
                android:textSize="@dimen/dp_16"/>
            <EditText
                android:id="@+id/register_newpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="@dimen/dp_75"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="请再次输入密码"
                android:textColor="#FFCCCCCC"
                android:background="@null"/>
        </RelativeLayout>



    </RelativeLayout>
    <RelativeLayout

        android:layout_below="@+id/register_RelativeLayout_body"
        android:id="@+id/register_RelativeLayout_seven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意服务条款和隐私条款"
            android:textSize="@dimen/dp_10"
            />
    </RelativeLayout>

    <Button
        android:layout_below="@+id/register_RelativeLayout_seven"
        android:id="@+id/register_go"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/shape_mainactivity_button"
        android:text="下一步"
        android:textColor="#fff" />

</RelativeLayout>