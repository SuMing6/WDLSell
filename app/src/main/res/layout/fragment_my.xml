<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/my_tou"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:orientation="vertical"
        android:background="#FF9600"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_touxiang"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                app:roundedCornerRadius="5dp"
                />
            <TextView
                android:layout_toRightOf="@+id/my_touxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="百乐便利超市"
                android:textSize="@dimen/dp_14"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"/>

            <ImageView
                android:id="@+id/my_shezhi"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_23"
                android:background="@drawable/ic_launcher_background"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_60"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_26"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额 : 5526.00"
                android:textSize="@dimen/dp_16"
                android:textColor="#fff"
                android:layout_gravity="center"
                />

            <Button
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/shape_my_tou_button"
                android:text="提现"
                android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_gz"
        android:layout_below="@+id/my_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_35">
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:background="@drawable/ic_launcher_background"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经营数据"
            android:textSize="@dimen/dp_14"
            android:textColor="#233750"
            android:layout_marginLeft="@dimen/dp_5"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/my_gz"
        android:id="@+id/my_bogy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_24">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日营业总额（元）"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:text="12281.00"
                    android:textColor="#F43751"
                    android:textSize="@dimen/dp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="昨日5625元"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日订单（单）"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:text="300"
                    android:textColor="#F43751"
                    android:textSize="@dimen/dp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="昨日98单"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_14"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/my_bogy"
        android:id="@+id/my_bogy_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_24">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业总额（元）"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:text="12281.00"
                    android:textColor="#F43751"
                    android:textSize="@dimen/dp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="昨日400元"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史总订单（单）"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:text="125"
                    android:textColor="#F43751"
                    android:textSize="@dimen/dp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="昨日98单"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_14"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服电话 400 - 500 - 999"
            android:textSize="@dimen/dp_14"
            android:textColor="#999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本号 ：v1.01.2"
            android:textSize="@dimen/dp_12"
            android:textColor="#BBBBBB"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>


</RelativeLayout>