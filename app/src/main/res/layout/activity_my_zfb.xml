<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyZFBActivity"
    android:background="#F2F2F2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的支付宝"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/my_money_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="＜"
            android:layout_marginLeft="@dimen/dp_22"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_14"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/my_money_mingxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="修改"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:textColor="#FF333333"
            android:layout_marginRight="@dimen/dp_22"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_money_table_corners"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_21"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为保障您的资金安全，请绑定账户本人的支付宝"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textSize="@dimen/dp_14"
                android:textColor="#333"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_50"
                android:textColor="#333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_28">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝账号："
                android:textSize="@dimen/dp_14"
                android:textColor="#333"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12563658942"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="#333"/>
        </LinearLayout>

        
    </LinearLayout>


</LinearLayout>