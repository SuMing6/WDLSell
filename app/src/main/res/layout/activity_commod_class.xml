<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CommodClassActivity"
    >

    <RelativeLayout
        android:id="@+id/commodity_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
        <TextView
            android:id="@+id/commod_class_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:id="@+id/commodity_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="顾客管理"
            android:textColor="#FF333333"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/commodity_tou"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"></android.support.v7.widget.RecyclerView>
    <Button
        android:layout_width="@dimen/dp_297"
        android:layout_height="@dimen/dp_42"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_mainactivity_button"
        android:text="添加分类"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        />

</RelativeLayout>