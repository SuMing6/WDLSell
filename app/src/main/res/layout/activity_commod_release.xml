<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CommodReleaseActivity"
    android:background="#F3F3F3">

    <RelativeLayout
        android:id="@+id/commodity_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
        <TextView
            android:id="@+id/commod_customer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:id="@+id/commodity_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="发布商品"
            android:textColor="#FF333333"
            />
        <TextView
            android:id="@+id/commod_customer_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:textColor="#FF333333"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F3F3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_4"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_1"
                >
                <ImageView
                    android:layout_width="@dimen/dp_347"
                    android:layout_height="@dimen/dp_347"
                    android:src="@mipmap/ic_launcher"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入商品名称"
                    android:background="#fff"
                    android:layout_marginTop="@dimen/dp_17"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分类"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_weight="9"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dp_40"
                        android:text="专场"
                        android:textColor="#FF9600"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:background="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入价格"
                        android:background="@drawable/shape_commod_shop_edit"
                        android:paddingLeft="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_42"
                        android:layout_marginRight="@dimen/dp_30"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="份"
                        android:background="@drawable/shape_commod_shop_edit"
                        android:paddingLeft="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_42"
                        android:layout_marginRight="@dimen/dp_30"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入规格"
                        android:background="@drawable/shape_commod_shop_edit"
                        android:paddingLeft="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_42"
                        android:layout_marginRight="@dimen/dp_30"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入重量"
                        android:background="@drawable/shape_commod_shop_edit"
                        android:paddingLeft="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_42"
                        android:layout_marginRight="@dimen/dp_30"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="库存数量"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入库存"
                        android:background="@drawable/shape_commod_shop_edit"
                        android:paddingLeft="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_30"/>
                </LinearLayout>
                <Button
                    android:layout_width="@dimen/dp_181"
                    android:layout_height="@dimen/dp_44"
                    android:text="立即发布"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_mainactivity_button"
                    android:layout_marginTop="@dimen/dp_80"
                    android:layout_marginBottom="@dimen/dp_100"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>