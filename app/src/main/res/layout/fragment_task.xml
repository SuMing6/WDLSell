<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="#FFF3F3F3">

    <RelativeLayout
        android:id="@+id/my_task_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/my_task_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                android:text="@string/myrw"
                android:textColor="#FF333333"
                />
        </RelativeLayout>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/my_task_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#fff"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/my_task_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        ></android.support.v4.view.ViewPager>





</LinearLayout>