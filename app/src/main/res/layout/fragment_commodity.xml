<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2"
    >
    <RelativeLayout
        android:id="@+id/commodity_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_35"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
            <TextView
                android:id="@+id/commodity_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                android:text="@string/spgw"
                android:textColor="#FF333333"
                />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/commodity_body"
        android:layout_below="@+id/commodity_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"

        >
        <LinearLayout
            android:id="@+id/commod_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺设置"
                android:textSize="@dimen/dp_14"
                android:textColor="#FF333333"
                android:layout_marginBottom="@dimen/dp_19"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/commod_commod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品"
                android:textSize="@dimen/dp_14"
                android:textColor="#FF333333"
                android:layout_marginBottom="@dimen/dp_19"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/commod_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/shape_imageview_yuan"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品分类"
                android:textSize="@dimen/dp_14"
                android:textColor="#FF333333"
                android:layout_marginBottom="@dimen/dp_19"/>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/commod_Release"
        android:layout_below="@+id/commodity_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/shape_imageview_yuan"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布商品"
                android:textSize="@dimen/dp_14"
                android:textColor="#FF333333"
                android:layout_marginBottom="@dimen/dp_19"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/commod_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顾客管理"
                android:textSize="@dimen/dp_14"
                android:textColor="#FF333333"
                android:layout_marginBottom="@dimen/dp_19"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginRight="@dimen/dp_10"
            >
        </LinearLayout>




    </LinearLayout>


</RelativeLayout>